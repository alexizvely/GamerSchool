@model GamerSchool.Web.Areas.Users.ViewModels.Comment.InputCommentViewModelCreate
@using (Ajax.BeginForm("AddComment", "Comment",
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            InsertionMode = InsertionMode.InsertBefore,
                            UpdateTargetId = "comments"
                        }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.EntityId)
    <form class="form-inline" role="form">
        <div class="form-group well">
            @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control", rows = "2", placeholder = "Leave comment..." } })
            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Comment" class="btn btn-default text-center" />
        </div>
    </form>
    <br />
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}