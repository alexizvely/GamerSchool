<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GamerSchool</title>
    @Styles.Render("~/Content/kendo-css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryajax")
    @Scripts.Render("~/bundles/kendo")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("GamerSchool", "Index", "Home", new { Area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { Area = "" }, new { @class = "text-danger" })</li>
                    <li>@Html.ActionLink("About", "Index", "About", new { Area = "" }, null)</li>
                    <li>@Html.ActionLink("Art", "Index", "Art", new { Area = "" }, null)</li>
                    <li>@Html.ActionLink("Design", "Index", "Design", new { Area = "" }, null)</li>
                    <li>@Html.ActionLink("School", "Index", "School", new { Area = "" }, null)</li>
                    <li>@Html.ActionLink("Shop", "Index", "Shop", new { Area = "" }, null)</li>
                    <li>@Html.ActionLink("Contacts", "Index", "Contacts", new { Area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
                @Html.Partial("_AdminPartial")
              
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer text-center container">
        <p>&copy; @DateTime.Now.Year - GamerSchool powered by Ivo Paounov</p>
    </footer>

    @Scripts.Render("~/bundles/jqueryval")
 
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
