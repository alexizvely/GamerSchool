<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>@ViewBag.Title - Gamer School</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/public")
</head>
<body>
    @Html.Partial("_NavbarPartial")
    <!-- loader -->
    <div id="site-loader">
        <div class="loader"></div>
    </div>
    <!-- loader -->
    <div id="site-wrap">
        <div id="bg">
            <img src="~/Content/backgrounds/bg.jpg" id="img"/>
            <div id="overlay"></div>
            <div id="effect">
                <img src="~/Content/backgrounds/public/cloud-01.png" alt="" id="cloud1">
                <img src="~/Content/backgrounds/public/cloud-02.png" alt="" id="cloud2">
                <img src="~/Content/backgrounds/public/cloud-03.png" alt="" id="cloud3">
                <img src="~/Content/backgrounds/public/cloud-04.png" alt="" id="cloud4">
            </div>
            <canvas id="js-canvas"></canvas>
        </div>
        <div class="container body-content">
            @RenderBody()
            <footer>
                <hr />
                <p class="text-center">Pavel Pavlov &copy; @DateTime.Now.Year - Gamer School</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/public")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
</body>
</html>
