@model GamerSchool.Web.ViewModels.Common.PaginationViewModel

<div class="row text-center">
    <div class="col-md-12">
        <ul class="pagination">

            @if (Model.CurrentPage > 1)
            {
                <li><a href="@(Model.Path + (Model.CurrentPage - 1).ToString())">&laquo;</a></li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                var className = Model.CurrentPage == i ? "active" : string.Empty;

                <li class="@className"><a href="@(Model.Path + i.ToString())">@i</a></li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li><a href="@(Model.Path + (Model.CurrentPage + 1).ToString())">&raquo;</a></li>
            }
        </ul>
    </div>
</div>

